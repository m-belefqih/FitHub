<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_primary"
    tools:context=".activity.EmailVerificationActivity">

    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back_white_30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:contentDescription="Go Back"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Verification"
            android:layout_toEndOf="@id/btnBack"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_stroke"
        android:alpha="0.3"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivVerificationIcon"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_email_verify"
                android:contentDescription="Email Verification Sent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Great, now verify your email"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tvVerificationInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check your inbox at [email@example.com] and click the verification link inside to complete your registration. This link will expire shortly, so verify soon!"
                android:textColor="@color/white"
                android:alpha="0.7"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:layout_marginBottom="30dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify Email"
                android:textStyle="bold"
                android:backgroundTint="@color/primary"
                android:textColor="@color/black_primary"
                app:cornerRadius="8dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Don't see an email?"
                    android:textColor="@color/white"
                    android:alpha="1"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check your spam folder."
                    android:textColor="@color/white"
                    android:alpha="1" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.42"
                    android:text="Link expired?"
                    android:textColor="@color/white"
                    android:alpha="1"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvResendCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resend verification email"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:30"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>