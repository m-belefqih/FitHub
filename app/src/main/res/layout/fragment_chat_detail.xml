<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_primary"
    android:paddingBottom="56dp"
    tools:context=".fragment.ChatFragment">

    <!-- Chat Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/dark_surface_light">

        <ImageView
            android:id="@+id/imgChatUser"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_user_24dp"
            android:background="@drawable/userprofile"
            android:scaleType="centerCrop"
            android:contentDescription="Chat user photo"
            app:tint="@color/primary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvChatUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taha"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvChatStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:textColor="@color/primary"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Messages Area -->
    <ScrollView
        android:id="@+id/chatScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/chatContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sample incoming message -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_surface_light"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey, are you training today?"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Sample outgoing message -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/primary"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes, I'll be there in 30 minutes."
                    android:textColor="@color/black_primary"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Message Input Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/dark_surface_light">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/CustomFloatingHint"
            app:boxBackgroundColor="@color/black_primary"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2.5dp"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type a message..."
                android:textColor="@color/white"
                android:textColorHint="@color/primary"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="4"
                android:imeOptions="actionSend" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="@color/primary"
            app:cornerRadius="24dp"
            app:icon="@drawable/send"
            app:iconSize="24dp"
            android:paddingStart="11dp"
            android:paddingTop="9dp"
            android:paddingEnd="6dp"
            android:paddingBottom="6dp"
            app:iconTint="@color/black_primary" />
    </LinearLayout>

</LinearLayout>
