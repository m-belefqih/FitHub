<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FitHub" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/dark_card</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="Theme.FitHub" parent="Base.Theme.FitHub">
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorOnSurfaceInverse">@color/black_primary</item>
    </style>

    <style name="CustomFloatingHint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/hint_color</item>

        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_box_tint</item>

        <item name="buttonIconTint">@color/checkbox_icon_tint</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/radio_button_tint</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/black_primary</item>
        <item name="materialCalendarStyle">@style/Widget.App.MaterialCalendar</item>
        <item name="colorSurface">@color/primary</item>

        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.PositiveDialog</item>

        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.NegativeDialog</item>
    </style>

    <style name="Widget.App.MaterialCalendar" parent="Widget.Material3.MaterialCalendar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="ThemeOverlay.App.LogoutDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>

        <item name="colorOnPrimary">@color/black_primary</item>

        <item name="colorSurface">#171717</item>

        <item name="colorOnSurface">@color/black_primary</item>

        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.PositiveDialog</item>

        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.NegativeDialog</item>
    </style>

    <style name="Widget.App.Button.PositiveDialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black_primary</item>
    </style>

    <style name="Widget.App.Button.NegativeDialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black_primary</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <!-- Couleur du fond derrière l’icône sélectionnée -->
        <item name="colorSecondaryContainer">@color/black_bottom</item>

        <!-- Couleur de l’icône / texte quand sélectionné -->
        <item name="colorOnSecondaryContainer">@color/primary</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">@color/primary</item>
    </style>


</resources>